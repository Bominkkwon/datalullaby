{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "../",
    "paths": {
      "@shared/*": ["./shared/*"]
    }
  },
  "include": ["./**/*", "../shared/**/*", "../vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}
